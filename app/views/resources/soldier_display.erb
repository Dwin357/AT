<div class="container">

  <div class='jumbotron'>
    <h1><%="#{@soldier_display[:soldier].name} #{@soldier_display[:soldier].rank}"%><span class='text-success' style=<%=display_toggle(@soldier_display[:on_mission])%>> - On Mission</span></h1>
    <br>
    <h3><%="ph: #{@soldier_display[:soldier].phone_number} wep: #{@soldier_display[:soldier].weapon_number} AT Missions: #{@soldier_display[:missions].count} AT Miles: #{@soldier_display[:soldier].miles}"%></h3>
  </div>

  <div class="row">

    <div class='col-sm-6'>
      <div class='panel panel-default'>
        <div class='panel-heading'>
          <h4>Soldier's Missions</h4>
        </div>
        <%@soldier_display[:missions].each do |mission| %>
          <form action=<%="url to the individual mission"%>>
            <%="#{mission[:name]}-#{mission[:unit]}-#{mission[:show_out_datetime]}:  #{mission[:truck_name]} #{mission[:driver_namerank]}, #{mission[:a_driver_namerank]}"%> 
            <button type="submit" class="btn btn-default">
              View
            </button>
          </form>
        <%end%>
      </div>
    </div>

    <div class='col-sm-6'>
      #dis play soldier statues
    </div>


  </div>


</div>




